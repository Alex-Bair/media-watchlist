<h1>Rename Watchlist</h1>

<form action="/watchlist/<%= @watchlist.id %>/rename" method="post">
  <fieldset>
    <div>
      <label for="new_name">New name for <%= @watchlist.name %>: </label>
      <input type="text" id="new_name" name="new_name" value="<%= @watchlist.name %>" required>
    </div>
    <button>Rename watchlist</button>
  </fieldset>
</form>